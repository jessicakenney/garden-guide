{{#partial "content"}}

    <h2>Your Garden {{ garden.gardenName }}</h2>

    {{#if gardenPlants}}
        {{#each gardenPlants}}
        <div class="col-md-4">
        <div class = "well" id="all-gardenPlants">
            <h4>{{ plantName  }}</h4>
            <img src="{{ image }}" >
        {{#if isPlanted}}
            <h4> Date Planted: {{ datePlanted  }}</h4>
        {{else}}
            <form action="/gardens/:gardenId/plants/:plantId/update" method="post">
                <div class="form-group">
                    <label for="plantDate">Enter Planting Date</label>
                    <input class="form-control" id="plantDate" name="plantDate" type="date" value="2017-10-22" required>
                </div>
            <button type="submit" class="btn btn-default">Add</button>
            </form>
        {{/if}}

        </div>
        </div>
        {{/each}}
    {{else}}
        <p>No Plants in your Garden</p>
    {{/if}}

    <footer class="footer">
        <div class="container">
        </div>
    </footer>
{{/partial}}

{{> layout.hbs}}